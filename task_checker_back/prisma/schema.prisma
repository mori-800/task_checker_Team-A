generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id           Int      @default(autoincrement()) @id
  name         String
  explanation  String
  deadlineDate DateTime
  image_url    String?
  status       Int
  genreId      Int
  genre        Genre    @relation(fields: [genreId], references: [id])
}

model Genre {
  id    Int    @default(autoincrement()) @id
  name  String
  tasks Task[]
}