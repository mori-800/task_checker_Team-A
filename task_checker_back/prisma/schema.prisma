// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//schema.prismaを修正する際は森に確認お願いします。migrationの兼ね合いですべて森が修正します。
model Task {
  id           Int      @default(autoincrement()) @id
  name         String
  explanation  String
  deadlineDate DateTime
  image_url    String?
  status       Int
  genreId      Int
  genre        Genre    @relation(fields: [genreId], references: [id])
  makerId      String
  assigneeId   String
  assignee     User     @relation(fields: [assigneeId], references: [uid]) // ✅ これを追加
  comments     Comment[]
}

model Genre {
  id    Int    @default(autoincrement()) @id
  name  String
  tasks Task[]
}

model User {
  uid         String   @id
  displayName String?
  email       String
  photoURL    String?
  tasks       Task[]   // ✅ 自動で assignee との関係が推論されます
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String // コメント内容
  taskId  Int    // chatテーブルへの外部キーカラム
  tasks    Task   @relation(fields: [taskId], references: [id])
}